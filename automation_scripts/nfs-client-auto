#firewall-cmd --reload

#install and config nfs client
apt-get -y install nfs-client
apt-get -y install nfs-common
mkdir -p /mnt/nfs/home
mkdir -p /mnt/nfs/var/nfsshare
mkdir -p /mnt/nfs/var/config
#Start the services and add them to boot menu
systemctl enable rpcbind
systemctl enable nfs-server
systemctl enable nfs-lock
systemctl enable nfs-idmap
systemctl start rpcbind
systemctl start nfs-server
systemctl start nfs-lock
systemctl start nfs-idmap
mount -t nfs  "nfs-server-ip":/home /mnt/nfs/home/
mount -t nfs  "nfs-server-ip":/var/nfsshare /mnt/nfs/var/nfsshare/
mount -t nfs  "nfs-server-ip":/var/nfsshare /mnt/nfs/var/config/
#check if connected  with nfs share

echo "10.128.0.4:/home            /mnt/nfs/home           nfs     defaults 0 0" >> /etc/fstab
echo "10.128.0.4:/var/dev         /mnt/nfs/var/dev        nfs     defaults 0 0" >> /etc/fstab
echo "10.128.0.4:/var/config      /mnt/nfs/var/config     nfs     defaults 0 0" >> /etc/fstab

mount -a

